@model IEnumerable<Product>

<div class="row pb-3 mb-5">
    @foreach (var product in Model)
    {
        <div class="col-lg-3 col-md-6">

            @*26.10 Tatiana make all card clickable*@
            <a asp-action="Details"  asp-route-productId=@product.Id class="text-decoration-none">
            <div class="row p-3">
                <div class="col-12 p-1" style="border:1px solid #95a5a6; border-radius:5px;">
                    <div class="card">
                        <img src="@product.ImageUrl" class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="p-1">
                                <p class="card-title h5 text-primary">@product.Name</p>
                                @*<div class="row">
                            <p class="card-title test-secondary col-6 pl-2">@product.Color</p>
                            <p class="card-title test-secondary col-6 text-end pr-2">@product.Size.Name</p>
                            </div>*@
                            </div>
                            <div class="p-1">
                                <p>$@product.ListPrice.ToString("0.00")</p>
                            </div>
                        </div>
                      
                    </div>
                </div>
            </div>
            </a>
        </div>

    }
</div>